<div class="container">

  <h1>Adding a new review</h1>

  <div class="btn btn-primary">
    <%= link_to "Restaurant", restaurant_path(@restaurant) %>
  </div>

  <div>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
